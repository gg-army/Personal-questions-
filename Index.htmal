    <div class="container">
        <h1>Personality Quest</h1>
        <div class="input-group">
            <input type="date" id="birthday" required>
        </div>
        <button onclick="getZodiac()">Discover Your Type!</button>
        <div id="result"></div>
        <button id="shareBtn" style="display: none;" onclick="shareOnWhatsApp()">Share on WhatsApp</button>
    </div>


    <script>
        let shareText = '';

        function getZodiac() {
            const birthday = new Date(document.getElementById('birthday').value);
            if (!birthday || isNaN(birthday)) {
                document.getElementById('result').innerText = 'Please enter a valid date!';
                document.getElementById('shareBtn').style.display = 'none';
                return;
            }

            const month = birthday.getMonth() + 1;
            const day = birthday.getDate();

            let zodiac = '';
            let personality = '';

            if ((month == 3 && day >= 21) || (month == 4 && day <= 19)) {
                zodiac = 'Aries';
                personality = 'Bold, adventurous, and full of energy! You charge into challenges like a cosmic warrior.';
            } else if ((month == 4 && day >= 20) || (month == 5 && day <= 20)) {
                zodiac = 'Taurus';
                personality = 'Grounded and reliable, you’re the rock of the zodiac with a love for life’s finer things.';
            } else if ((month == 5 && day >= 21) || (month == 6 && day <= 20)) {
                zodiac = 'Gemini';
                personality = 'Witty and curious, you’re a social butterfly with a knack for juggling ideas.';
            } else if ((month == 6 && day >= 21) || (month == 7 && day <= 22)) {
                zodiac = 'Cancer';
                personality = 'Nurturing and intuitive, you’re the heart of the party with a cozy, caring vibe.';
            } else if ((month == 7 && day >= 23) || (month == 8 && day <= 22)) {
                zodiac = 'Leo';
                personality = 'Confident and charismatic, you light up any room like a true star!';
            } else if ((month == 8 && day >= 23) || (month == 9 && day <= 22)) {
                zodiac = 'Virgo';
                personality = 'Detail-oriented and thoughtful, you’re the master planner of the zodiac.';
            } else if ((month == 9 && day >= 23) || (month == 10 && day <= 22)) {
                zodiac = 'Libra';
                personality = 'Charming and balanced, you bring harmony and style to every situation.';
            } else if ((month == 10 && day >= 23) || (month == 11 && day <= 21)) {
                zodiac = 'Scorpio';
                personality = 'Intense and mysterious, you dive deep into life’s secrets with passion.';
            } else if ((month == 11 && day >= 22) || (month == 12 && day <= 21)) {
                zodiac = 'Sagittarius';
                personality = 'Free-spirited and adventurous, you’re always chasing the next big quest!';
            } else if ((month == 12 && day >= 22) || (month == 1 && day <= 19)) {
                zodiac = 'Capricorn';
                personality = 'Ambitious and disciplined, you climb life’s mountains with determination.';
            } else if ((month == 1 && day >= 20) || (month == 2 && day <= 18)) {
                zodiac = 'Aquarius';
                personality = 'Innovative and unique, you’re the visionary who thinks outside the galaxy.';
            } else if ((month == 2 && day >= 19) || (month == 3 && day <= 20)) {
                zodiac = 'Pisces';
                personality = 'Dreamy and empathetic, you swim through life with creativity and compassion.';
            }

            shareText = `I’m a ${zodiac}! ${personality} Discover yours at Zodiac Personality Quest!`;
            document.getElementById('result').innerHTML = 
                `You are a <strong>${zodiac}</strong>!<br>${personality}`;
            document.getElementById('shareBtn').style.display = 'inline-block';
        }

        function shareOnWhatsApp() {
            const url = `https://api.whatsapp.com/send?text=${encodeURIComponent(shareText)}`;
            window.open(url, '_blank');
        }
    </script>
