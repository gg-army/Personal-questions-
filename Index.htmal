    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Orbitron', sans-serif;
        }

        body {
            background: #0a0a23;
            color: #fff;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow: hidden;
        }

        /* Starry Background Animation */
        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: transparent;
            z-index: -1;
        }

        .stars::before,
        .stars::after {
            content: '';
            position: absolute;
            width: 2px;
            height: 2px;
            background: white;
            animation: twinkle 2s infinite;
        }

        .stars::before {
            box-shadow: 
                100px 100px #fff, 200px 300px #fff, 300px 150px #fff,
                400px 500px #fff, 500px 200px #fff, 600px 400px #fff,
                700px 100px #fff, 800px 600px #fff, 900px 300px #fff;
            animation-delay: 0.5s;
        }

        .stars::after {
            box-shadow: 
                150px 200px #fff, 250px 400px #fff, 350px 100px #fff,
                450px 300px #fff, 550px 500px #fff, 650px 200px #fff;
            animation-delay: 1s;
        }

        @keyframes twinkle {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.3; }
        }

        .container {
            background: rgba(0, 0, 0, 0.8);
            padding: 30px;
            border-radius: 15px;
            text-align: center;
            max-width: 600px;
            border: 3px solid #00ffcc;
            box-shadow: 0 0 20px #00ffcc;
            animation: glow 2s ease-in-out infinite;
        }

        @keyframes glow {
            0% { box-shadow: 0 0 20px #00ffcc; }
            50% { box-shadow: 0 0 40px #00ffcc; }
            100% { box-shadow: 0 0 20px #00ffcc; }
        }

        h1 {
            font-size: 2.2em;
            color: #00ffcc;
            text-shadow: 0 0 10px #00ffcc;
            margin-bottom: 20px;
        }

        .input-group {
            margin: 20px 0;
        }

        input[type="date"] {
            padding: 12px;
            font-size: 1.1em;
            border: 2px solid #ff00ff;
            background: #1a1a3d;
            color: #fff;
            border-radius: 10px;
            outline: none;
            transition: all 0.3s;
        }

        input[type="date"]:focus {
            border-color: #00ffcc;
            box-shadow: 0 0 10px #00ffcc;
        }

        button {
            padding: 15px 30px;
            font-size: 1em;
            background: #ff00ff;
            color: #fff;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            box-shadow: 0 0 10px #ff00ff;
            margin: 10px;
        }

        button:hover {
            background: #00ffcc;
            color: #0a0a23;
            box-shadow: 0 0 20px #00ffcc;
            transform: scale(1.1);
        }

        #result {
            margin-top: 20px;
            font-size: 1.3em;
            color: #00ffcc;
            text-shadow: 0 0 5px #00ffcc;
            opacity: 0;
            animation: fadeIn 1s forwards;
        }

        #shareBtn {
            background: #25D366;
            box-shadow: 0 0 10px #25D366;
        }

        #shareBtn:hover {
            background: #00ffcc;
            box-shadow: 0 0 20px #00ffcc;
        }

        @keyframes fadeIn {
            to { opacity: 1; }
        }

        /* Font Import */
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap');
    </style>
